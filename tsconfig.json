{
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "outDir": "lib",
    "target": "es2018",
    "module": "node16",
    "noImplicitAny": true,
    "checkJs": false,
    "allowJs": false,
    "skipLibCheck": false,
    "strict": true,
    "isolatedModules": true,
    "moduleResolution": "node16",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  }
}
