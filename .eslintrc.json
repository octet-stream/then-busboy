{
  "plugins": [
    "ava"
  ],
  "extends": [
    "@octetstream",
    "plugin:ava/recommended"
  ],
  "rules": {
    "ava/no-ignored-test-files": ["error", {
      "files": [
        "src/test/unit/**/*.mjs"
      ]
    }],
    "operator-linebreak": ["error", "after", {
      "overrides": {
        "+": "ignore",
        "?": "before",
        ":": "before"
      }
    }]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".mjs"]
      }
    }
  }
}
